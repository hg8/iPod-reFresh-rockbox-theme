#
# 	Album Art
%Vl(albumart,12,-36,30,30,-)%Vf(ffffff)%Vb(F4F4F4)
%Cl(0,0,30,30)%Vf(ffffff)%Vb(F4F4F4)
%Cd
#
#	Current Track
%Vl(currenttrack,50,-29,-11,-,4)%Vf(ffffff)%Vb(F4F4F4)
%s%al%?ia<%ia - |>%?it<%it|%fn>
